<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medical.Management.Views.LoginPage"
             Title="LoginPage"
             xmlns:viewModel="clr-namespace:Medical.Management.ViewModels"
             x:DataType="viewModel:LoginViewModel"
             >
    <ScrollView>
        <VerticalStackLayout>
            <Entry
                Keyboard="Email"
                Placeholder="E-mail"
                Text="{Binding Email}"
                />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>