<?xml version="1.0" encoding="UTF-8" ?>
<Shell
	x:Class="Medical.Management.AppShell"
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:views="clr-namespace:Medical.Management.Views"
	xmlns:local="clr-namespace:Medical.Management">

    <ShellContent
		Title="Login"
		ContentTemplate="{DataTemplate views:LoginPage}"
		Route="LoginPage"
		Shell.NavBarIsVisible="False" />


    <TabBar>
        <ShellContent
			Title="Main"
			Icon="iconblank.png"
			ContentTemplate="{DataTemplate views:MainPage}" />
        <ShellContent
			Title="ListDetail"
			Icon="iconlistdetail.png"
			ContentTemplate="{DataTemplate views:ListDetailPage}" />
    </TabBar>
</Shell>
